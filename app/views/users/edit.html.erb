<div class='container'>
    <div class='row'>
        <div class='col-md-5 user__edit'>
            <h2>User info</h2>
            <% if @user.errors.any? %>
                <%= @user.errors.count %>件のエラーが発生しました
                <ul>
                    <% @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            <% end %>
            <%= form_with model: @user do |f| %> 
                Name<br />
                <%= f.text_field :name %><br />
                Image<br />
                <%= f.file_field :profile_image, accept: "image/*" %><br />                
                Introduction<br />
                <%= f.text_area :introduction %><br />

                <%= f.submit 'Update User' %>
            <% end %>
        </div>
    </div>
</div>

