<div class='container'>
    <div class='row'>
        <div class='col-md-5 user__edit'>
            <h2>Editing Book</h2>
            <% if @book.errors.any? %>
                <%= @book.errors.count %>件のerrorが発生しました
                <ul>
                    <% @book.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            <% end %>
            <%= form_with model: @book do |f| %> 
                Title<br />
                <%= f.text_field :title %><br />          
                Opinion<br />
                <%= f.text_area :body %><br />

                <%= f.submit 'Update Book',class:'btn btn-success' %>
            <% end %><br />
            <%= link_to 'Show',book_path(@book) %> | <%= link_to 'Back',books_path %>
        </div>
    </div>
</div>

